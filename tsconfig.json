{
  "include": ["src"],

  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",

    "declaration": false,

    "module": "esnext",
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": false,
    "resolvePackageJsonImports": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  }
}
