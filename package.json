{
  "name": "@spearwolf/signalize",
  "version": "0.5.2",
  "description": "signals and effects for all",
  "main": "dist/signalize.cjs.js",
  "module": "dist/signalize.js",
  "types": "types/index.d.ts",
  "exports": {
    "import": "./dist/signalize.js",
    "require": "./dist/signalize.cjs.js"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.16"
  },
  "scripts": {
    "docs:gists": "node scripts/createGistImages.cjs",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "clean": "rimraf build types tests dist",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "update": "npx npm-check --update",
    "fix": "run-s --print-label eslint:fix prettier:write",
    "jest": "cross-env NODE_ENV=test jest",
    "jest:debug": "cross-env NODE_ENV=test node --nolazy --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --colors --verbose",
    "jest:watch": "cross-env NODE_ENV=test jest --watch",
    "test:build": "tsc --project tsconfig.tests.json",
    "test:build:watch": "tsc --project tsconfig.tests.json --watch",
    "dev": "run-s clean test:build test:build:watch",
    "test": "run-s eslint prettier:check test:build jest",
    "cbt": "run-s clean build test",
    "bundle": "rollup -c",
    "dist": "run-s clean build bundle",
    "prepare": "run-s dist",
    "prepack": "run-s clean build bundle",
    "publish:pkg": "node scripts/publishPackage.cjs",
    "world": "run-s clean build test bundle"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@spearwolf/eventize": "^3.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@types/sinon": "^10.0.18",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "carbon-now-cli": "^2.0.0",
    "core-js": "^3.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-problems": "^8.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "exec-sh": "^0.4.0",
    "jest": "^29.7.0",
    "jest-expect-message": "^1.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.1",
    "sinon": "^15.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "homepage": "https://github.com/spearwolf/signalize/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/signalize.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/signalize/issues"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "@spearwolf/eventize": "^3.0.0"
  }
}
