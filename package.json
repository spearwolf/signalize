{
  "name": "@spearwolf/signalize",
  "version": "0.4.0-dev",
  "description": "signals and effects for typescript",
  "main": "build/signalize.umd.js",
  "module": "build/signalize.js",
  "exports": {
    "import": "./build/signalize.js",
    "require": "./build/signalize.umd.js"
  },
  "types": "build/types/index.d.ts",
  "rollupBuild": {
    "outputDir": "build",
    "outputName": "signalize",
    "externals": [
      "@spearwolf/eventize"
    ],
    "esm": {
      "buildName": "es2017"
    },
    "umd": {
      "buildName": "umd",
      "globals": {
        "@spearwolf/eventize": "eventize"
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build:esm": "cross-env NODE_ENV=production NODE_OPTIONS=\"--openssl-legacy-provider\" rollup -c ./rollup/rollup.config.esm.js",
    "watch:esm": "cross-env NODE_ENV=production NODE_OPTIONS=\"--openssl-legacy-provider\" rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production NODE_OPTIONS=\"--openssl-legacy-provider\" rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production NODE_OPTIONS=\"--openssl-legacy-provider\" rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:*",
    "clean": "rimraf build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "update": "npx npm-check --update",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest",
    "cbt": "run-s clean build test"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-typescript": "^7.21.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@spearwolf/eventize": "^2.0.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "core-js": "^3.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-problems": "^7.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "rollup": "^2.75.7",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "homepage": "https://github.com/spearwolf/signalize/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/signalize.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/signalize/issues"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "@spearwolf/eventize": "^2.0.4"
  }
}
