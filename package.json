{
  "name": "@spearwolf/signalize",
  "version": "0.2.0",
  "description": "signals and effects for typescript",
  "main": "build/signalize.umd.js",
  "module": "build/signalize.js",
  "exports": {
    "import": "./build/signalize.js",
    "require": "./build/signalize.umd.js"
  },
  "types": "build/types/index.d.ts",
  "rollupBuild": {
    "outputDir": "build",
    "outputName": "signalize",
    "externals": [
      "@spearwolf/eventize"
    ],
    "esm": {
      "buildName": "es2017"
    },
    "umd": {
      "buildName": "umd",
      "globals": {
        "@spearwolf/eventize": "eventize"
      }
    }
  },
  "scripts": {
    "build:esm": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.esm.js",
    "watch:esm": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:*",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest",
    "cbt": "run-s clean build test"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "core-js": "^3.16.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "homepage": "https://github.com/spearwolf/signalize/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/signalize.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/signalize/issues"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "jest": {
    "coverageDirectory": "<rootDir>/build/coverage",
    "coverageReporters": [
      "text",
      "json",
      "html"
    ]
  },
  "dependencies": {
    "@spearwolf/eventize": "^2.0.0-beta.2"
  }
}
